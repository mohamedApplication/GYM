<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.Login">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/dumbbell1"
        android:rotation="45"
        />

    <android.support.v7.widget.CardView
        android:layout_margin="15sp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:onClick="openAfterLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_margin="10dp"
                    android:inputType="text"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_avatar"
                    android:gravity="right"
                    android:hint="البريد الالكترونى"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_margin="10dp"
                    android:inputType="textPassword"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_lock"
                    android:gravity="right"
                    android:hint="كلمة المرور"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/round_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="دخول"
                android:gravity="center"
                android:textColor="#Fff"
                android:textSize="18sp"
                />

            <TextView
                android:textColor="@color/blue_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هل نسيت كلمة المرور؟"
                android:layout_gravity="center"
                />





        </LinearLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/login_no_account"
            android:layout_centerInParent="true"
            android:onClick="textRegisterNow"
            android:textColor="@color/blue_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سجل الان"
            />

        <TextView
            android:id="@+id/login_no_account"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ليس لديك حساب؟" />



    </RelativeLayout>




    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:onClick="openAfterLogin"
        android:layout_width="240dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:id="@+id/asm_area_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_google_search"
                android:gravity="center"
                android:text="دخول بواسطه جوجل"
                android:textColor="#808080"
                android:textSize="22sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:onClick="afterLogin"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/ic_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="دخول بواسطه فيسبوك"
                android:textColor="#3b5998"
                android:textSize="22sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
